{
  "name": "datezen",
  "version": "0.1.0",
  "description": "An innovative library simplifying date handling in JavaScript.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./format": {
      "import": "./dist/format.js",
      "require": "./dist/format.cjs"
    },
    "./compare": {
      "import": "./dist/compare.js",
      "require": "./dist/compare.cjs"
    },
    "./diff": {
      "import": "./dist/diff.js",
      "require": "./dist/diff.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf dist",
    "test": "jest",
    "ts-check": "tsc --noEmit",
    "lint": "eslint",
    "verify": "npm run lint && npm run ts-check",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepare": "husky install",
    "benchmark": "npm run build:bench && npm run run:bench",
    "build:bench": "tsup --config tsup-benchmark.config.ts",
    "run:bench": "node benchmarks/index.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "UTC",
    "date",
    "time",
    "timezone",
    "format",
    "parse",
    "convert"
  ],
  "author": "Maksym Cherniavskyi",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/strip-comments": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "chalk": "^5.4.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-check-file": "^2.8.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "strip-comments": "^2.0.1",
    "tinybench": "^4.0.1",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0"
  }
}
